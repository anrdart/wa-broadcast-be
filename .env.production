# Production Environment Configuration
NODE_ENV=production
PORT=3000

# WhatsApp Web.js Production Configuration
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable
CHROME_PATH=/usr/bin/google-chrome-stable

# Session and Cache Configuration
SESSION_PATH=/app/sessions
PUPPETEER_CACHE_DIR=/app/.cache/puppeteer

# Frontend Configuration
FRONTEND_URL=https://wa-broadcast.ekalliptus.my.id
ALLOWED_ORIGINS=https://wa-broadcast.ekalliptus.my.id,http://localhost:3000,http://localhost:3001

# API Configuration
API_BASE_URL=https://wa-broadcast.ekalliptus.my.id

# Security Configuration
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Docker Configuration
DOCKER_ENV=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100