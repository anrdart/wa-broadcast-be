# Replit Environment Configuration for WhatsApp Broadcast API

# Node.js Configuration
NODE_ENV=production
PORT=3000

# API Configuration
API_BASE_URL=https://your-repl.repl.co
CORS_ORIGIN=*

# WebSocket Configuration
WS_PORT=3000
WS_PATH=/

# Chromium/Puppeteer Configuration for Replit
# Chromium paths will be detected dynamically
# PUPPETEER_EXECUTABLE_PATH will be set by deploy-replit.js
# CHROME_PATH will be set by deploy-replit.js
DISPLAY=:99

# WhatsApp Web.js Configuration
SESSION_PATH=./sessions
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Memory Optimization for Replit
NODE_OPTIONS=--max-old-space-size=512