# Replit Environment Configuration
# Copy this file to .env and update the values as needed

# Node.js Environment
NODE_ENV=production
PORT=3000

# Replit-specific variables (automatically set by Replit)
# REPL_ID=your-repl-id
# REPL_SLUG=your-repl-slug
# REPL_OWNER=your-username

# Chromium/Puppeteer Configuration for Replit
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
CHROME_PATH=/usr/bin/chromium
DISPLAY=:99

# WhatsApp Web.js Configuration
WWEB_SESSION_PATH=./sessions
WWEB_CACHE_PATH=./cache

# API Configuration
# Update this with your Replit app URL
API_BASE_URL=https://your-repl-name.your-username.repl.co

# CORS Configuration
CORS_ORIGIN=*

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# Session Management
SESSION_TIMEOUT=300000
MAX_SESSIONS=5

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Memory Management (Replit optimizations)
NODE_OPTIONS="--max-old-space-size=512 --optimize-for-size"

# Puppeteer optimizations for Replit
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_CACHE_DIR=./puppeteer-cache